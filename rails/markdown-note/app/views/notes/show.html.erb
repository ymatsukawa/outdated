<div id="show">
  <div>
    <h2>&lt;&nbsp;<%= @note.title %>&nbsp;&gt;</h2>
  <hr />
  <div id="markdown">
    <%= @body %>
  </div>
  <hr />
  <%= link_to 'EDIT', edit_note_path(@note), class: 'button button-outline' %>
  <%= link_to 'DELETE', @note, class: 'button button-outline', method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
